{
  "manifest_version": 2,
  "name": "LecturePro",
  "version": "0.0.1",
  "description": "LecturePro",
  "author": "Guillermo Martinez",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["main.js"],
      "css": ["main.css"]
    }
  ],
  "web_accessible_resources": ["static/*"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}
